{{#if (isEnabled "useRecovery")}}
    <div class="row flexrow table-header green no-wrap">
        <div class="flex2 center">
            <div class="field-label ellipsis">{{ localize 'COF.optional.recovery.label' }}</div>
        </div>
        <div class="flex1 center">
            <div class="field-label">{{ localize 'COF.ui.base' }}</div>
        </div>
        <div class="flex1 center">
            <div class="field-label">{{ localize 'COF.ui.bonus' }}</div>
        </div>
        <div class="flex1 center">
            <div class="field-label">{{ localize 'COF.ui.value' }}</div>
        </div>
    </div>
    <div class="row flexrow no-wrap">
        <div class="flex2 center bg-green">
            <span class="field-label ellipsis"><i class="fas fa-heartbeat"></i>&nbsp;{{ localize 'COF.optional.rp.abbrev' }}</span>
        </div>
        <div class="flex1 center cell">
            <input class="field-value" name="data.optional.rp.base" type="text" value="{{actor.data.optional.rp.base}}" placeholder="Base" data-dtype="Number"/>
        </div>
        <div class="flex1 center cell">
            <input class="field-value" name="data.optional.rp.bonus" type="text" value="{{actor.data.optional.rp.bonus}}" placeholder="Bonus" data-dtype="Number"/>
        </div>
        <div class="flex1 center cell">
            <input class="field-value" name="data.optional.rp.value" type="text" value="{{actor.data.optional.rp.value}}" placeholder="Value" data-dtype="Number"/>
        </div>
    </div>
{{/if}}