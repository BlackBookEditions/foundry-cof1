<form class="{{cssClass}}" autocomplete="off">
    <div class="wrap">
        <div class="header">
            <div class="flexrow header-background no-wrap">
                <div class="flex1 left">
                    <div id="banner-left"></div>
                </div>
                <div class="flex1 right">
                    <div id="banner-right"></div>
                </div>
            </div>
            <div class="flexrow">
                <div class="flex1 center" id="logo-banner"><img src="/systems/cof/ui/logo-banner.png"/></div>
            </div>
        </div>
        <div class="flexrow main">
            <div class="sidebar flex1">
                <br/>
                <div class="row flexrow">
                    <div class="flex1 center">
                        <span class="charname">{{split actor.name}}</span>
                    </div>
                </div>
                <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}"/>
                <br/>
            </div>
            <div class="separator flex1"></div>
            <div class="content flex3">
                <div class="row flexrow top">
                    <div class="flex1" style="margin-right: 5px;">
                        <!-- NAME -->
                        <div class="row flexrow">
                            <div class="flex1 center bg-darkgreen">
                                <span class="field-label">{{ localize 'COF.details.name' }}</span>
                            </div>
                            <div class="flex2 center cell">
                                <input class="field-value sans" name="name" type="text" value="{{actor.name}}" placeholder="{{ localize 'COF.details.name' }}" data-dtype="String"/>
                            </div>
                        </div>
                        <!-- /NAME -->
                        <!-- NC -->
                        <div class="row flexrow">
                            <div class="flex1 center bg-darkgreen">
                                <span class="field-label">{{ localize 'COF.attributes.nc.abbrev' }}</span>
                            </div>
                            <div class="flex2 center cell">
                                <input class="field-value" name="data.nc.value" type="text" value="{{actor.data.nc.value}}" placeholder="{{ localize 'COF.attributes.nc.label' }}" data-dtype="Number"/>
                            </div>
                        </div>
                        <!-- /NC -->
                        <!-- SIZE -->
                        <div class="row flexrow">
                            <div class="flex1 center bg-darkgreen">
                                <span class="field-label">{{ localize 'COF.details.size' }}</span>
                            </div>
                            <div class="flex2 center cell">
                                <select name="data.details.size" data-type="String" style="width:100%">
                                    {{#select data.details.size}}
                                        <option value="">{{localize "COF.None"}}</option>
                                        <option value="tiny">Minuscule</option>
                                        <option value="small">Très petite</option>
                                        <option value="short">Petite</option>
                                        <option value="med">Moyenne</option>
                                        <option value="big">Grande</option>
                                        <option value="huge">Énorme</option>
                                        <option value="colossal">Colossale</option>
                                    {{/select}}
                                </select>
                            </div>
                        </div>
                        <!-- /SIZE -->
                    </div>
                    <div class="flex1">
                        <!-- ARCHETYPE -->
                        <div class="row flexrow">
                            <div class="flex1 center bg-darkgreen">
                                <span class="field-label">{{ localize 'COF.ui.archetype' }}</span>
                            </div>
                            <div class="flex2 center cell">
                                <select name="data.archetype" data-type="String" style="width:100%">
                                    {{#select data.archetype}}
                                        <option value="">{{localize "COF.None"}}</option>
                                        <option value="standard">Standard</option>
                                        <option value="rapide">Rapide</option>
                                        <option value="puissant">Puissant</option>
                                        <option value="inférieur">Inférieur</option>
                                    {{/select}}
                                </select>
                            </div>
                        </div>
                        <!-- /ARCHETYPE -->
                        <!-- CATEGORY -->
                        <div class="row flexrow">
                            <div class="flex1 center bg-darkgreen">
                                <span class="field-label">{{ localize 'COF.ui.category' }}</span>
                            </div>
                            <div class="flex2 center cell">
                                <select name="data.category" data-type="String" style="width:100%">
                                    {{#select data.category}}
                                        <option value="">{{localize "COF.None"}}</option>
                                        <option value="vivante">Vivante</option>
                                        <option value="humanoïde">Humanoïde</option>
                                        <option value="non-vivante">Non-vivante</option>
                                    {{/select}}
                                </select>

                            </div>
                        </div>
                        <!-- /CATEGORY -->
                        <!-- BOSS RANK -->
                        <div class="row flexrow">
                            <div class="flex1 center bg-darkgreen">
                                <span class="field-label">{{ localize 'COF.ui.boss' }}</span>
                            </div>
                            <div class="flex1 center cell">
                                <input class="field-value sans" name="data.boss.rank" type="text" value="{{actor.data.boss.rank}}" placeholder="{{ localize 'COF.ui.rank' }}" data-dtype="String"/>
                            </div>
                            <div class="flex1 center cell">
                                <select name="data.boss.type" data-type="String" style="width:100%">
                                    {{#select data.boss.type}}
                                        <option value="">{{localize "COF.None"}}</option>
                                        <option value="standard">Standard</option>
                                        <option value="rapide">Rapide</option>
                                        <option value="puissant">Puissant</option>
                                        <option value="inférieur">Inférieur</option>
                                    {{/select}}
                                </select>

                            </div>
                        </div>
                        <!-- /BOSS RANK -->
                    </div>
                </div>
                <div class="row flexrow"><div class="flex1 half-spacer"></div></div>
                {{!-- Sheet Tab Navigation --}}
                <nav class="sheet-tabs tabs" data-group="primary">
                    <a class="item" data-tab="stats">{{ localize "COF.tabs.stats" }}</a>
                    <a class="item" data-tab="combat">{{ localize "COF.tabs.combat" }}</a>
                    <a class="item compendium-pack" data-pack="cof.items" data-open="0" data-tab="inventory">{{ localize "COF.tabs.inventory" }}</a>
                    <a class="item compendium-pack" data-pack="cof.paths" data-open="0" data-tab="capacities">{{ localize "COF.tabs.paths" }} & {{ localize "COF.tabs.capacities" }}</a>
                    <!--                    <a class="item compendium-pack" data-pack="cof.capacities" data-open="0" data-tab="capacities">{{ localize "COF.tabs.capacities" }}</a>-->
                    <a class="item" data-tab="description">{{ localize "COF.tabs.description" }}</a>
                </nav>
                {{!-- Sheet Body --}}
                <section class="sheet-body">
                    {{!-- Stats Tab --}}
                    <div class="tab stats" data-group="primary" data-tab="stats">
                        {{> "systems/cof/templates/partials/encounter/encounter-stats.hbs"}}
                    </div>
                    {{!-- Combat Tab --}}
                    <div class="tab combat" data-group="primary" data-tab="combat">
                        {{> "systems/cof/templates/partials/encounter/encounter-combat.hbs"}}
                    </div>
                    {{!-- Capacitites Tab --}}
                    <div class="tab capacities" data-group="primary" data-tab="capacities">
                        {{> "systems/cof/templates/partials/encounter/encounter-capacities.hbs"}}
                    </div>
                    {{!-- Inventory Tab --}}
                    <div class="tab inventory" data-group="primary" data-tab="inventory">
                        {{> "systems/cof/templates/partials/encounter/encounter-inventory.hbs"}}
                    </div>
                    {{!-- Notes Tab --}}
                    <div class="tab description" data-group="primary" data-tab="description">
                        {{> "systems/cof/templates/partials/encounter/encounter-description.hbs"}}
                    </div>
                </section>
            </div>
        </div>
    </div>
</form>
