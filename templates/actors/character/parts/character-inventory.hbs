{{#if (notEmpty (getInventory actor.items))}}
<ol class="inventory-list">
    <li class="inventory-header flexrow">
        <h3 class="item-name flexrow">Armures</h3>
        <div class="item-detail">Qté</div>
        <div class="item-detail">Equiper</div>
        <div class="item-controls">
            <a class="item-control item-create compendium-pack" data-pack="cof.items" data-open="0" title="Ajouter un objet"><i class="fas fa-plus"></i>&nbsp; Add</a>
        </div>
    </li>
    {{#each (getArmors actor.items) as |item id|}}
    <ol class="item-list">
        <li class="item flexrow" data-item-id="{{item._id}}" data-item-type="capacity" draggable="true">
            <div class="item-name flexrow">
                <div class="item-image" style="background-image: url('{{item.img}}')"></div>
                <h4>{{item.name}}</h4>
            </div>
            <div class="item-detail">{{item.data.qty}}</div>
            <div class="item-detail">
                {{#if item.data.worn}}
                    <a class="item-control item-equip" title="Unequip Item"><i class="fas fa-shield-alt"></i></a>
                {{else}}
                    <a class="item-control item-equip" title="Equip Item" style="color:lightgray;"><i class="fas fa-shield-alt"></i></a>
                {{/if}}
            </div>
            <div class="item-controls">
                <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
                <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
            </div>
        </li>
    </ol>
