                <!--                    <option value="{{!a}}">{{!abl.label}}</option>-->
                <!--                    {{!/each}}-->
                <!--                    {{!/select}}-->
                <!--                </select>-->
            </span>
                    </div>
                </div>
            {{/if}}
            <div class="row flexrow">
                <div class="flex3 center">
                    <span class="field-label label-text">{{localize "COF.ui.limited"}} ?</span>
                </div>
                <div class="flex4">
                    <input name="data.limited" type="checkbox" value="{{item.data.limited}}"
                           data-dtype="Boolean" {{checked
                            item.data.limited}}/>
                </div>
            </div>
            <div class="row flexrow">
                <div class="flex3 center">
                    <span class="field-label label-text">{{localize "COF.ui.spell"}} ?</span>
                </div>
                <div class="flex4">
                    <input name="data.spell" type="checkbox" value="{{item.data.spell}}" data-dtype="Boolean" {{checked
                            item.data.spell}}/>
                </div>
            </div>
            <div class="row flexrow">
                <div class="flex3 center">
                    <span class="field-label label-text">{{localize "COF.ui.summary"}}</span>
                </div>
                <div class="flex4">
                    <span class="field-label">
                        <input class="field-value" name="data.summary" type="text" value="{{item.data.summary}}"
                               placeholder="{{localize "COF.ui.summary"}}" data-dtype="String">
                    </span>
                </div>
            </div>
            <div class="row flexrow">
                <div class="flex3 center">
                    <span class="field-label label-text">{{localize "COF.ui.description"}}</span>
                </div>
            </div>
            <div class="row flexrow" style="height: 100%">
                {{editor content=data.description target="data.description" button=true owner=owner editable=editable}}
            </div>
        </div>
    </div>
</form>
