                <!--                    &lt;!&ndash;                    <option value="{{!a}}">{{!abl.label}}</option>&ndash;&gt;-->
                <!--                    {{!/each}}-->
                <!--                    {{!/select}}-->
                <!--                </select>-->
            </span>
                    </div>
                </div>
            {{/if}}
            {{#if (equals data.scope "species")}}
                <div class="row flexrow">
                    <div class="flex3 center">
                        <span class="field-label label-text">{{localize "COF.ui.species"}}</span>
                    </div>
                    <div class="flex4">
            <span class="field-label">
                <input class="field-value" name="data.species" type="text" value="{{item.data.species}}"
                       placeholder="{{localize "COF.ui.species"}}" data-dtype="String">
            </span>
                    </div>
                </div>
            {{/if}}
            {{#if data.inPath}}
                <div class="row flexrow">
                    <div class="flex3 center">
                        <span class="field-label label-text">{{localize "COF.ui.path"}}</span>
                    </div>
                    <div class="flex4">
            <span class="field-label">
                <input class="field-value" name="data.path" type="text" value="{{item.data.path}}"
                       placeholder="{{localize "COF.ui.path"}}" data-dtype="String">

                <!--                <select name="data.path" data-type="String" style="width:100%">-->
                <!--                    {{!#select data.path}}-->
                <!--                    <option value="">{{!localize "COF.None"}}</option>-->
                <!--                    <option value="voie-de-l-air">Voie de l'Air</option>-->
                <!--                    <option value="voie-de-l-eau">Voie de l'Eau</option>-->
