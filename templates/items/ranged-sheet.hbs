<form class="{{cssClass}}" autocomplete="off">
    <div class="wrap">
        <header class="sheet-header">
            {{> "systems/cof/templates/partials/item/item-header.hbs"}}
        </header>
        <div class="main">
            <div class="row flexrow">
                <div class="flex3 center">
                    <span class="field-label label-text">Category</span>
                </div>
                <div class="flex4">
            <span class="field-label">
                <input class="field-value" name="type" readonly="true" type="text" value="{{item.type}}"
                       placeholder="Category" data-dtype="String">
            </span>
                </div>
            </div>
            <div class="row flexrow">
                <div class="flex3 center">
                    <span class="field-label label-text">Price (PA)</span>
                </div>
                <div class="flex4">
            <span class="field-label">
                <input class="field-value" name="data.price" type="text" value="{{item.data.price}}" placeholder="Price"
                       data-dtype="Number">
            </span>
                </div>
            </div>
            <div class="row flexrow">
                <div class="flex3 center">
                    <span class="field-label label-text">Damage</span>
                </div>
                <div class="flex4">
            <span class="field-label">
                <input class="field-value" name="data.dmg" type="text" value="{{item.data.dmg}}" placeholder="Damage"
                       data-dtype="String">
            </span>
                </div>
            </div>
            <div class="row flexrow">
                <div class="flex3 center">
                    <span class="field-label label-text">Range</span>
                </div>
                <div class="flex4">
            <span class="field-label">
                <input class="field-value" name="data.range" type="text" value="{{item.data.range}}" placeholder="Range"
                       data-dtype="Number">
            </span>
                </div>
            </div>
            <div class="row flexrow">
                <div class="flex3 center">
                    <span class="field-label label-text">Hands</span>
                </div>
                <div class="flex4">
            <span class="field-label">
                <input class="field-value" name="data.hands" type="text" value="{{item.data.hands}}" placeholder="Hands"
                       data-dtype="Number">
            </span>
                </div>
            </div>
            <div class="row flexrow">
                <div class="flex3 center">
                    <span class="field-label label-text">Reload</span>
                </div>
                <div class="flex4">
            <span class="field-label">
                <input class="field-value" name="data.reload" type="text" value="{{item.data.reload}}"
                       placeholder="Reload" data-dtype="String">
            </span>
                </div>
            </div>
            <div class="row flexrow">
                <div class="flex3 center">
                    <span class="field-label label-text">Bonus</span>
                </div>
                <div class="flex4">
            <span class="field-label">
                <input class="field-value" name="data.bonus" type="text" value="{{item.data.bonus}}" placeholder="Bonus"
                       data-dtype="Number">
            </span>
                </div>
            </div>
            <div class="row flexrow">
                <div class="flex3 center">
                    <span class="field-label label-text">{{localize "COF.ui.description"}}</span>
                </div>
            </div>
            <div class="row flexrow" style="height: 100%">
                {{editor content=data.description target="data.description" button=true owner=owner editable=editable}}
            </div>
        </div>
    </div>
</form>
